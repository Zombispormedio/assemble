<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        >

    <FrameLayout
            android:id="@+id/date_label_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/overlay_label_shape"
            android:elevation="2sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2.5dp"

            >
        <TextView
                android:id="@+id/date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/simple_date"
                />
    </FrameLayout>

    <LinearLayout
            android:id="@+id/friend_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/message_margin_right"
            android:orientation="horizontal"
            >


            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/message_padding"
                    >

                <ImageView
                        android:id="@+id/friend_image_view"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/camera_container"
                        />
            </FrameLayout>


            <FrameLayout
                    android:id="@+id/friend_bubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2.5dp"
                    android:layout_marginTop="2.5dp"
                    android:background="@drawable/left_message_bubble"
                    android:elevation="2dp"
                    android:padding="@dimen/message_padding"
                    >

                <TextView
                        android:id="@+id/friend_content_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem_impsum"
                        android:textSize="@dimen/message_text_size"
                        />
            </FrameLayout>

    </LinearLayout>

    <FrameLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/message_margin_left"
            >

        <FrameLayout
                android:id="@+id/user_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="2.5dp"
                android:layout_marginRight="@dimen/message_margin_right"
                android:layout_marginTop="2.5dp"
                android:background="@drawable/right_message_bubble"
                android:elevation="2dp"
                android:padding="@dimen/message_padding"
                >

            <TextView
                    android:id="@+id/user_content_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/example_string"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/message_text_size"
                    />
        </FrameLayout>

        <ImageView
                android:id="@+id/message_state"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center_vertical|bottom"
                android:layout_marginEnd="5dp"
                android:src="@drawable/message_clock_layer"
                />

    </FrameLayout>
    <TextView
            android:id="@+id/message_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/date_message_margin_left"
            android:text="@string/message_date"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"

            />

</LinearLayout>