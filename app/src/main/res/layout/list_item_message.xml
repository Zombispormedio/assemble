<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/friend_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_gravity="left"

            >
        <ImageView
                android:id="@+id/friend_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/camera_layer_list"
                android:layout_gravity="left"
                />
        <android.support.v7.widget.RecyclerView
                android:id="@+id/friend_messages_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                />
    </LinearLayout>

    <FrameLayout android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:visibility="gone"
            >

        <android.support.v7.widget.RecyclerView
                android:id="@+id/user_messages_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                />

    </FrameLayout>

</FrameLayout>