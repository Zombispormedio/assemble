<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingBottom="15sp"
        android:paddingTop="15sp"
        >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

            <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/profile_image_square"
                    />
        </FrameLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                >

            <TextView
                    android:id="@+id/username_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/example_string"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

            <TextView
                    android:id="@+id/email_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/example_string"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    />
        </LinearLayout>

    </LinearLayout>

    <com.varunest.sparkbutton.SparkButton
            android:id="@+id/add_friend_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20sp"
            android:layout_gravity="right|center_vertical"
            app:sparkbutton_activeImage="@drawable/account_check"
            app:sparkbutton_animationSpeed=".5"
            app:sparkbutton_iconSize="40dp"
            app:sparkbutton_inActiveImage="@drawable/account_plus"
            app:sparkbutton_primaryColor="@color/light_green"
            app:sparkbutton_secondaryColor="@color/colorAccentLight"
            />



</FrameLayout>